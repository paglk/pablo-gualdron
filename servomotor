// Incluímos la librería para poder controlar el servo

#include <Servo.h>
 
// Declaramos la variable para controlar el servo

Servo servoMotor;

Servo servoMotor2;
 
void setup() {

  // Iniciamos el monitor serie para mostrar el resultado
  
  Serial.begin(9600);
 
  // Iniciamos el servo 
  
  servoMotor.attach(9);
  
    servoMotor2.attach(8);
    
}
 
void loop() {
  
  // Desplazamos a la posición 90
  
  servoMotor.write(90);
  
  // Esperamos 1 segundo
  
  delay(1000);
  
  // Desplazamos a la posición 70
  
  servoMotor.write(70);
  
  // Esperamos 1 segundo
  
  delay(1000);
  
  // Desplazamos a la posición 90
  
  servoMotor.write(90);
  
  // Esperamos 1 segundo
  
  delay(1000);
  
   // Desplazamos a la posición 110
   
  servoMotor.write(110);
  
  // Esperamos 1 segundo
  
  delay(1000);
  
  // Desplazamos a la posición 90
  
  servoMotor.write(90);
  
  // Esperamos 1 segundo
  
  delay(1000);
  
  // Desplazamos a la posición 90
  
  servoMotor2.write(90);
  
  // Esperamos 1 segundo
  
  delay(1000);
  
  
  // Desplazamos a la posición 90
  
  servoMotor2.write(90);
  
  // Esperamos 1 segundo
  
  delay(1000);
   // Desplazamos a la posición -30
   
  servoMotor2.write(-30);
  
  // Esperamos 1 segundo
  
  delay(1000);
  
}
